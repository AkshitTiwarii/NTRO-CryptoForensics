{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "CI": "false",
      "SKIP_PREFLIGHT_CHECK": "true",
      "GENERATE_SOURCEMAP": "false",
      "NODE_VERSION": "18.x"
    }
  },
  "installCommand": "cd frontend && npm install --legacy-peer-deps"
}
